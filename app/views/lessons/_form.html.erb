<%= form_with(model: lesson, class: "container mt-4") do |form| %>
  <% if lesson.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(lesson.errors.count, "error") %> prohibited this lesson from being saved:</h4>
      <ul>
        <% lesson.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :video_url, class: "form-label" %>
    <%= form.text_field :video_url, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :course_id, class: "form-label" %>
    <%= form.collection_select :course_id, Course.all, :id, :title, { prompt: "Select a course" }, class: "form-select" %>
  </div>

  <div class="mb-3">
    <%= form.submit "Create Lesson", class: "btn btn-primary" %>
  </div>
<% end %>
