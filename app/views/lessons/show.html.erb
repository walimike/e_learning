<h1 class="text-center mt-4">Lesson Details</h1>

<p style="color: green"><%= notice %></p>

<%= render @lesson %>

<div class="text-center mt-3">
  <% if current_user.role == 'admin' %>
    <%= link_to "Edit this lesson", edit_lesson_path(@lesson), class: "btn btn-warning btn-sm" %> |
    <%= button_to "Destroy this lesson", @lesson, method: :delete, class: "btn btn-danger btn-sm", data: { confirm: "Are you sure?" } %>
  <% end %>

  <%= link_to "Back to lessons", lessons_path, class: "btn btn-secondary btn-sm" %>
</div>
