<div class="card mt-4 course-card shadow-sm border-0">
  <div class="position-relative">
    <img src="<%= url_for(course.thumbnail) || 'https://via.placeholder.com/350' %>" 
     class="card-img-top rounded-top img-fluid fixed-img" 
     alt="<%= course.title %>">
    <span class="position-absolute top-0 end-0 badge rounded-pill bg-light p-2 m-2">
      <i class="bi bi-bookmark"></i>
    </span>
  </div>
  <div class="card-body">
    <div class="d-flex align-items-center mb-2">
      <span class="text-warning">
        ★★★☆☆
      </span>
      <small class="text-muted ms-2">0 reviews</small>
    </div>
    <h5 class="card-title"><%= course.title %></h5>
    <p class="text-muted">
      <i class="bi bi-person"></i> 1 
      <i class="bi bi-clock ms-2"></i> <%= course.duration || 0 %>
    </p>
    <div class="d-flex align-items-center">
      <div class="avatar-circle bg-primary text-white me-2">
        <%= user_initials(course.user.full_name) %>
      </div>
      <small class="text-muted">By <%= course.user.full_name %> in <%= course.categories.join(', ') %></small>
    </div>
    <hr>
    <div class="d-flex justify-content-between align-items-center">
      <p class="fw-bold fs-5 mb-0">UGX <%= number_with_delimiter(course.price, delimiter: ' ') %></p>
      <%= link_to "Purchase", course_path(course), class: "btn btn-primary rounded-pill px-3" %>
    </div>
  </div>
</div>
<style>
.fixed-img {
  width: 100%; /* Ensures all images take the full width of the card */
  height: 230px; /* Set a fixed height */
  object-fit: cover; /* Ensures images maintain aspect ratio and fill the space */
}
</style>