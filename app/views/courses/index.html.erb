<div class="container my-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="fw-bold">Available Courses</h1>

    <div class="d-flex align-items-center">
      <% if is_admin %>
        <%= link_to "New Course", new_course_path, class: "btn btn-primary me-3" %>
      <% end %>

      <%= form_with url: courses_path, method: :get, local: true, class: "d-inline" do %>
        <%= select_tag :sort, options_for_select([
          ["Release Date (newest first)", "created_at_desc"],
          ["Price (low to high)", "price_asc"],
          ["Price (high to low)", "price_desc"]
        ], params[:sort]), class: "form-select w-auto", onchange: "this.form.submit();" %>
      <% end %>
    </div>
  </div>

  <div class="row">
    <% @courses.each do |course| %>
      <div class="col-md-4">
        <%= render "courses/course", course: course %>
      </div>
    <% end %>
  </div>
</div>
