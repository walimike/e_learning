<div class="card shadow-sm border-0 mx-auto" style="max-width: 450px;">
  <div class="card-body">
    <h2 class="text-center mb-4">Forgot Password</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-3">
        <%= f.label :email, class: "form-label fw-bold" %>
        <%= f.email_field :email, class: "form-control", autofocus: true, autocomplete: "email", placeholder: "Enter your email" %>
      </div>

      <div class="d-grid">
        <%= f.submit "Send Reset Instructions", class: "btn btn-primary btn-lg" %>
      </div>
    <% end %>

    <div class="text-center mt-3">
      <%= link_to "Back to Login", new_session_path(resource_name), class: "text-decoration-none text-primary fw-bold" %>
    </div>
  </div>
</div>
